<div class="login-page p-24">
    <h1 class="mb-24" style="color: rgb(0, 152, 121); text-align: center; font-size: 3.5em;">Log in to LiftLog</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form flexbox flex-center'}) do |f| %>
        <div class="add-exercise-inputs flexbox flex-column gap-16">
            <label class="label">Email:
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'john.doe@example.com' %>
            </label>

            <label class="label">Password:
                <%= f.password_field :password, autocomplete: "current-password", placeholder: '••••••••' %>
            </label>

            <% if devise_mapping.rememberable? %>
                <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                </div>
            <% end %>

            <button type="submit" class="main-btn">Log in</button>
        </div>
    <% end %>

    <div class="flexbox flex-center flex-column gap-8 py-16">
        <%= render "devise/shared/links" %>
    </div>
</div>
