<%= render "devise/shared/error_messages", resource: resource %>

<div class="register-page p-24">
    <h1 class="mb-24" style="color: rgb(0, 152, 121); text-align: center; font-size: 3em;">LiftLog - Track your lifts and progress with ease!</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form flexbox flex-center' }) do |f| %>
        <div class="add-exercise-inputs flexbox flex-column gap-16">
            <label class="label">Email:
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'john.doe@example.com' %>
            </label>

            <label class="label">Password:
                <%= f.password_field :password, autocomplete: "new-password", placeholder: '••••••••' %>

                <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
            </label>

            <label class="label">Password confirmation:
                <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: '••••••••' %>
            </label>

            <button type="submit" class="main-btn">Sign up</button>
        </div>
    <% end %>

    <div class="flexbox flex-center flex-column gap-8 py-16">
        <%= render "devise/shared/links" %>
    </div>
</div>
